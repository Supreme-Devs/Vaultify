{
  "name": "vaultify",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start:backend": "cd apps/backend && bun dev",
    "start:frontend": "cd apps/web && bun dev",
    "db:generate": "cd packages/db && bunx prisma generate && cd ../.."
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "jsonwebtoken": "^9.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3"
  }
}
